<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button -->
    <style name="Widget.Mongle.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/app_font_default</item>
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:textColor">@color/on_point</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="Widget.Mongle.Button.TextButton">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/point</item>
    </style>

    <style name="Widget.Mongle.Button.Outline" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_outline_round</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="Widget.Mongle.Button.KakaoButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_kakao</item>
        <item name="android:fontFamily">@font/app_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/kakao_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">14sp</item>
        <item name="android:paddingBottom">14sp</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light.Bridge</item>
        <item name="backgroundTint">@null</item>
        <item name="icon">@drawable/ic_kakaotalk</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/kakao_text</item>
    </style>


    <!-- Progressbar -->
    <style name="Widget.Mongle.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar</item>
    </style>


    <!-- Checkbox -->
    <style name="Widget.Mongle.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/app_font_default</item>
        <item name="android:buttonTint">@color/point</item>
    </style>


    <!-- Radio Button -->
    <style name="Widget.Mongle.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/app_font_default</item>
        <item name="android:buttonTint">@color/point</item>
    </style>


    <!-- EditText -->
    <style name="Widget.Mongle.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/app_font_default</item>
    </style>


    <!-- Textview -->
    <style name="Widget.Mongle.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/app_font_default</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Widget.Mongle.ShowcaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Bottom Sheet -->
    <style name="Widget.Mongle.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Mongle.BottonSheet.Modal</item>
    </style>

    <style name="Widget.Mongle.BottonSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_top_15</item>
    </style>
</resources>