<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.Mongle.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Mongle.Button.Kakao">
        <item name="android:drawableStart">@drawable/ic_kakaotalk</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:backgroundTint">@color/kakao_yellow</item>
        <item name="android:textColor">@color/kakao_text</item>
    </style>

    <style name="MyStyle">
        <item name="android:textColor">#00f</item>
    </style>

    <style name="MyStyle.A">
        <item name="android:textColor">#0f0</item>
    </style>

    <style name="MyStyle.A.B">
        <item name="android:textColor">#f00</item>
    </style>
</resources>