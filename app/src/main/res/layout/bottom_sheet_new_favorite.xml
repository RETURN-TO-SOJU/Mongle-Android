<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Mongle">

    <!-- TODO Refactoring -->
    <!-- BottomSheetDialogFragment에서 margin을 주기위해 parent
     layout을 선언함.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/new_favorite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/new_favorite_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <me.zhanghai.android.foregroundcompat.ForegroundRadioButton
                android:id="@+id/new_favorite_radio_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:foreground="@drawable/background_checkable"
                android:background="@drawable/emotion_happy"
                android:button="@null" />

            <me.zhanghai.android.foregroundcompat.ForegroundRadioButton
                android:id="@+id/new_favorite_radio_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:foreground="@drawable/background_checkable"
                android:background="@drawable/emotion_neutral"
                android:button="@null" />

            <me.zhanghai.android.foregroundcompat.ForegroundRadioButton
                android:id="@+id/new_favorite_radio_sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:foreground="@drawable/background_checkable"
                android:background="@drawable/emotion_sad"
                android:button="@null" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <me.zhanghai.android.foregroundcompat.ForegroundRadioButton
                android:id="@+id/new_favorite_radio_anxious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:foreground="@drawable/background_checkable"
                android:background="@drawable/emotion_anxious"
                android:button="@null" />

            <me.zhanghai.android.foregroundcompat.ForegroundRadioButton
                android:id="@+id/new_favorite_radio_embarrass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:foreground="@drawable/background_checkable"
                android:background="@drawable/emotion_embarrass"
                android:button="@null" />

            <me.zhanghai.android.foregroundcompat.ForegroundRadioButton
                android:id="@+id/new_favorite_radio_angry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:foreground="@drawable/background_checkable"
                android:background="@drawable/emotion_angry"
                android:button="@null" />
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/gray"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="16dp"
            android:hint="@string/please_input_title"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:textCursorDrawable="@drawable/cursor_gray" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="@string/OK" />

    </LinearLayout>
</FrameLayout>