<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.won983212.mongle.presentation.view.main.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.won983212.mongle.presentation.view.main.MainActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/layout_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_overview_bottom"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:itemBackground="@color/background"
            app:itemIconTint="@color/bottom_nav_item"
            app:itemTextColor="@color/bottom_nav_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </LinearLayout>
</layout>